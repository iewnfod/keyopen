{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "keyopen",
        "version": "1.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "dialog": {
                "all": true
            },
            "globalShortcut": {
                "all": true
            },
            "window": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "identifier": "com.iewnfod.keyopen",
            "icon": ["icons/icon.icns", "icons/icon.png"]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "title": "",
                "fullscreen": false,
                "resizable": true,
                "width": 1000,
                "height": 700,
                "label": "main",
                "focus": true,
                "minWidth": 650,
                "minHeight": 400,
                "visible": false,
                "titleBarStyle": "Overlay"
            }
        ]
    }
}
